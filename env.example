# LeadGate CRM - Umgebungsvariablen Beispiel
# Kopiere diese Datei zu .env und passe die Werte an

# JWT Secret Key (WICHTIG: In Produktion Ã¤ndern!)
JWT_SECRET_KEY=your-secret-key-change-this-in-production

# CORS erlaubte Origins (kommagetrennt)
ALLOWED_ORIGINS=http://localhost:8004,http://127.0.0.1:8004

# Token-Ablaufzeiten
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 Stunden
REFRESH_TOKEN_EXPIRE_DAYS=30  # 30 Tage

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=5  # 5 Login-Versuche pro Minute

# Environment
ENVIRONMENT=development  # development, production

# Stripe-Konfiguration (optional)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Frontend-URL
FRONTEND_URL=http://localhost:8000






